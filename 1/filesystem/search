#!/bin/sh

# recursively in ".", output "path" for each file containing at least one line containing all input strings.
# arguments: string ...
# depends on ripgrep.

pattern="rg --no-unicode --color=never --no-heading -NLFS '$1' ."
shift
for a in "$@"; do pattern="${pattern} | rg --color=never -FS '$a'"; done
clear
exec /bin/sh -c "$pattern" | cut -d : -f 1 | uniq
