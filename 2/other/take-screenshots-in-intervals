#!/bin/sh
# takes a screenshot every n seconds
# dependencies: scrot

# config
interval=200
destination=$HOME/temp/other/interval-screenhots/$(iso-date)

echo destination: $destination, interval: $interval "s"

mkdir -p $destination
while true; do
  name="$(day-seconds)"
  scrot --focused "$destination/$name.png"
  sleep $interval
done
